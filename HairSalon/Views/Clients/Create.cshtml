@{
  Layout = "_Layout";
}

@model HairSalon.Models.Client;

<h4>Add a New Client</h4>

@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name)
  <br/>
  @Html.LabelFor(model => model.HairLength)
  @Html.TextBoxFor(model => model.HairLength)
  <br/>
  @Html.LabelFor(model => model.Stylist)
  <br/>
  @Html.DropDownList("StylistsId")
  <br/>
  <br><input type="submit" value="Add" class="btn btn-primary"/>
}
<br/>
<p>@Html.ActionLink("Back to Clients", "Index")</p>