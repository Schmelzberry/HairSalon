
@{
  Layout = "_Layout";
}

@using HairSalon.Models;
@model List<HairSalon.Models.Client>;

<h1>Clients</h1>
<hr>

@if (@Model.Count == 0)
{
  <h3>No clients have been added to the system!</h3>

}
else 
{
 <ul>
 @foreach (Client client in Model)
{
  <li>@Html.ActionLink($"{client.Name}", "Details", new {id = client.ClientId})</li>
}
 </ul> 
}
<hr>
<h6>Links</h6>
<p>@Html.ActionLink("Create Client", "Create")</p>
<p>@Html.ActionLink("All Stylists", "Index", "Stylists")</p>
<p>@Html.ActionLink("Home Page", "Index", "Home")</p>
