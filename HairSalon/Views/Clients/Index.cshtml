
@{
  Layout = "_Layout";
}

@using HairSalon.Models;
@model List<HairSalon.Models.Client>;

<h1>Clients</h1>

if (@Model.Count == 0)
{
  <h3>No clients have been added to the system!</h3>

}
else 
{
 <ul>
 @foreach (Client client in Model)
{
  <li>@Html.ActionLink($"{client.Name}", "Details", new {id = client.ClientId})</li>
}
 </ul> 
}

<p>@Html.ActionLink("Create a new client", "Create")</p>
<p>@Html.ActionLink("Take me home", "Index", "Home")</p>
