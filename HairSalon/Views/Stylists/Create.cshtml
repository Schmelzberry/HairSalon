@{
  Layout = "_Layout";
}

@model HairSalon.Models.Stylist

<h4>Add new Stylist</h4>

@using (Html.BeginForm("Create", "Stylists"))
{
  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name)
  <br/>
  @Html.LabelFor(model => model.HoursPerWeek)
  @Html.TextBoxFor(model => model.HoursPerWeek,  new { type="number", min = "0", max = "70"})
  <br/>
  <input type="submit" value="Submit" class="btn btn-primary" />
}

<br/>
<p>@Html.ActionLink("Back to Main Stylists Page", "Index")</p>