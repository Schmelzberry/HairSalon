@{
  Layout = "_Layout";
}

@using HairSalon.Models;


<h4>Here are your current stylists:</h4>

@if (@Model.Count == 0)
{
  <h3>You don't have any stylists, better get hiring!</h3>
}
else 
{
  <ul>
    @foreach (Stylist stylist in Model)
    {
      <li>@Html.ActionLink($"{stylist.Name}", "Details", new { id = stylist.StylistsId }) </li>
    }
  </ul>
}

<p>@Html.ActionLink("Add a New Stylist", "Create")</p>
<p>@Html.ActionLink("Back to Home PAage", "Index", "Home")</p>